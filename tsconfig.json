{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "jsx": "preserve",
        "lib": ["ESNext", "DOM"]
    },
    "include": ["**/.vitepress/**/*", "vite/client"],
    "exclude": ["**/node_modules/**", "**/dist/**"]
}
